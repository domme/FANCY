#if !defined (INCLUDE_CONSTANTBUFFER_INCLUDE_)
#define INCLUDE_CONSTANTBUFFER_INCLUDE_
//---------------------------------------------------------------------------//
  /*layout(binding = 1) uniform PER_LAUNCH
  {
    
  } cbPerLaunch; */
//---------------------------------------------------------------------------//
  layout(std140, binding = 0) uniform PER_FRAME
  {
    vec4 c_TimeParameters;
  } cbPerFrame;
//---------------------------------------------------------------------------//
  layout(std140, binding = 1) uniform PER_VIEWPORT
  {
    vec4 c_RenderTargetSize;
  } cbPerViewport;
//---------------------------------------------------------------------------//
  layout(std140, binding = 2) uniform PER_CAMERA
  {
    mat4 c_ViewMatrix;
    mat4 c_ViewInverseMatrix;
    mat4 c_ProjectionMatrix;
    mat4 c_ProjectionInverseMatrix;
    mat4 c_ViewProjectionMatrix;
    mat4 c_ViewProjectionInverseMatrix;
    vec4 c_NearFarParameters;
    vec4 c_CameraPosWS;
  } cbPerCamera;
//---------------------------------------------------------------------------//
  layout(std140, binding = 3) uniform PER_LIGHT
  {
    // xyz: ColorIntensity
    // w: LightType (Dir, Point, Spot, Area)
    vec4 c_LightParams;
    vec4 c_PointSpotParameters;
    vec3 c_LightPosWS;
    vec3 c_LightPosVS;
    vec3 c_LightDirWS;
    vec3 c_LightDirVS;
  } cbPerLight;
//---------------------------------------------------------------------------//  
  layout(std140, binding = 4) uniform PER_MATERIAL
  {
    vec4 c_MatDiffIntensity;
    vec4 c_MatSpecIntensity;
  } cbPerMaterial;
//---------------------------------------------------------------------------//  
  layout(std140, binding = 5) uniform PER_OBJECT
  {
    mat4 c_WorldMatrix;
    mat4 c_WorldInverseMatrix;
    mat4 c_WorldViewMatrix;
    mat4 c_WorldViewInverseMatrix;
    mat4 c_WorldViewProjectionMatrix;
    mat4 c_WorldViewProjectionInverseMatrix;
  } cbPerObject;
//---------------------------------------------------------------------------//  
//---------------------------------------------------------------------------//
// Built-in blocks (need redeclaration by ARB_separate_shader_objects...)
//---------------------------------------------------------------------------//
  

//---------------------------------------------------------------------------//
#endif // INCLUDE_CONSTANTBUFFER_INCLUDE_